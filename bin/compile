#!/bin/sh


arrow() {
  echo '----->' "$@"
}

indent() {
  sed -u 's/^/       /'
}

arrow "Starting adding ODBC Driver 17 for SQL Server"
BUILD_DIR=$1
mkdir -p "${BUILD_DIR}/.apt/usr/lib/odbc/conf/" | indent
mkdir -p "${BUILD_DIR}/.apt/usr/share/resources/en_US/" | indent
cp "${BUILD_DIR}/.apt/opt/microsoft/msodbcsql17/lib64/libmsodbcsql-17.8.so.1.1" "${BUILD_DIR}/.apt/usr/lib/libmsodbcsql-17.5.so.2.1" | indent
arrow "copied libmsodbcsql-17.8.so.1.1"
cp "${BUILD_DIR}/.apt/opt/microsoft/msodbcsql17/share/resources/en_US/msodbcsqlr17.rll" "${BUILD_DIR}/.apt/usr/share/resources/en_US/msodbcsqlr17.rll" | indent
arrow "copied msodbcsqlr17.rll"
cp "${BUILD_DIR}/.apt/opt/microsoft/msodbcsql17/etc/odbcinst.ini" "${BUILD_DIR}/.apt/usr/lib/odbc/conf/odbcinst.ini" | indent
arrow "copied odbcinst.ini"

mkdir -p "${BUILD_DIR}/etc" | indent
mkdir -p "${BUILD_DIR}/.profile.d" | indent
cp .profile.d/configure-odbc.sh "${BUILD_DIR}/.profile.d" | indent
arrow "copied profile.d"
arrow "Finished adding ODBC Driver 17 for SQL Server"
